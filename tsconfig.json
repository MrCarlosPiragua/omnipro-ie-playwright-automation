{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "rootDir": "./",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "cucumber.ts", "cucumber.js"],
  "exclude": ["node_modules", "dist"]
}
